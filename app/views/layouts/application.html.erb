<!DOCTYPE html>
<html>
  <head>
    <title>MostWanted</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="pl-5 pr-5">
  <div class="sticky-top background-fill" >
    <nav>
    
    <ul class="nav nav-tabs">

      <% if logged_in? %>
        <li class="nav-item">
          <%= link_to "Welcome Page", welcome_path, :class => "nav-link"%>
        </li>
        <li class="nav-item">
        <%=link_to "Your Case Notifications/Updates", updates_path, :class => "nav-link" %>
        </li>
        <li class="nav-item">
          <%=link_to "Your Cases", city_path(@current_user.city), :class => "nav-link" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Home", home_path, :class => "nav-link" %>
        </li>
      <%end%>

       <li class="nav-item">
        <%= link_to "View All Crimes", crimes_path, :class => "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Crimes by City", cities_path, :class => "nav-link" %>
      </li>


    

    
    

    <div >
    <% if logged_in? %>
      <b>Logged in as: <%= @current_user.username %> ID: <%= @current_user.badge_id%></b>
      <%= button_to "Log out", '/logout', method: :delete %>
    <% else %>
      <%= link_to "Login", login_path %>
      <%= link_to "Register", new_user_path %>
    <%end%>
    </div>
    </div>


  </ul>

    </nav>
    </div>
    <hr>
    <%= yield %>
