<h1>Login</h1>

<div>
<% if flash[:message] %>
    <%= flash[:message] %>
<% end%>
</div>



<%= form_tag "/login" do  %>
    <%= label_tag :username %> <br>
    <%= text_field_tag :username %> <br><br>
    <%= label_tag :password %> <br>
    <%= password_field_tag :password %> <br><br>
    <%= label_tag :badge_id %> <br>
    <%= number_field_tag :badge_id %> <br><br>
    <%= submit_tag "Log in!" %>
<% end %>