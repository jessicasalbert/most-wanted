<h1>Login</h1>

<div>
<% if flash[:message] %>
    <%= flash[:message] %>
<% end%>
</div>



<%= form_tag "/login" do  %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= label_tag :badge_id %>
    <%= number_field :badge_id %>
    <%= submit_tag "Log in!" %>
<% end %>