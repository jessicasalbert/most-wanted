
<h1> LEO Registration </h1>

<% if flash[:messages]%>
    <% flash[:messages].each do |e| %>
        <%= e %>
    <%end%>
<%end%>

<%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.label :badge_id %>
    <%= f.text_field :badge_id%>
    <%= f.label :city %>
    <%= f.collection_select :city_id, @cities, :id, :name%>
    <%= f.submit "Register" %>
<% end %>