<h1>Cities & Case counts</h1>

<%= button_to 'Order by Crime Count', {:action => "high_crime", :method => :get} %>

<br>

<div class='cities'>
    <ul class="list-group">
    <% @cities.each do |city| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <%=link_to city.display_name, city_path(city) %>
            <span class="badge badge-primary badge-pill"><%= city.crimes.count %> cases</span> 
        </li>
        <%end%>
    </ul>
</div>
